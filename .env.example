# Vorpal Configuration Example
# Copy this to .env and modify as needed

# Application
VORPAL_DEBUG=false
VORPAL_ENVIRONMENT=development
VORPAL_LOG_LEVEL=INFO

# Server
VORPAL_HOST=0.0.0.0
VORPAL_PORT=8000
VORPAL_WORKERS=1

# Database (PostgreSQL)
VORPAL_DATABASE_URL=postgresql+asyncpg://vorpal:vorpal@localhost:5432/vorpal

# Redis (optional)
VORPAL_REDIS_URL=redis://localhost:6379/0

# Authentication
VORPAL_SECRET_KEY=change-me-in-production
VORPAL_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS (comma-separated list)
VORPAL_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# OpenTelemetry (optional)
VORPAL_OTEL_ENABLED=false
VORPAL_OTEL_SERVICE_NAME=vorpal-core
VORPAL_OTEL_EXPORTER_ENDPOINT=http://localhost:4317
